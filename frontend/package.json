{
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron electron/main.js",
    "electron:build": "vite build && electron-builder build --mac"
  },
  "build": {
    "appId": "com.klaeser.voyagr",
    "productName": "Voyagr",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
    "category": "public.app-category.developer-tools",
    "target": "dmg",
      "icon": "assets/voyagr-icon.png"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "daisyui": "^5.0.9",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "vite": "^6.2.3"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.3.0",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.0.17",
    "axios": "^1.8.4",
    "js-base64": "^3.7.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.4.0",
    "react-simple-typewriter": "^5.0.1",
    "styled-components": "^6.1.17",
    "tailwindcss": "^4.0.17"
  }
}
